{
  "info": {
    "name": " HR Management Backend",
    "_postman_id": "a1b2c3d4-e5f6-7890-abcd-ef0123456789",
    "description": "Collection for local development (set {{baseUrl}} and {{token}} globals)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Auth - Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"debos.das.02@gmail.com\",\n  \"password\": \"de@206914\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/auth/login" }
          }
        }
      ]
    },
    {
      "name": "Users",
      "auth": { "type": "bearer", "bearer": [ { "key": "token", "value": "{{token}}", "type": "string" } ] },
      "item": [
        {
          "name": "Users - Create",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": { "mode": "raw", "raw": "{ \"email\": \"user@example.com\", \"password\": \"secret123\", \"name\": \"Test User\" }" },
            "url": { "raw": "{{baseUrl}}/users" }
          }
        },
        { "name": "Users - List", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": { "raw": "{{baseUrl}}/users" } } },
        { "name": "Users - Get", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": { "raw": "{{baseUrl}}/users/{{id}}" } } },
        { "name": "Users - Update", "request": { "method": "PUT", "header": [{ "key": "Content-Type", "value": "application/json" },{ "key": "Authorization", "value": "Bearer {{token}}" }], "body": { "mode": "raw", "raw": "{ \"name\": \"Updated Name\" }" }, "url": { "raw": "{{baseUrl}}/users/{{id}}" } } },
        { "name": "Users - Delete", "request": { "method": "DELETE", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": { "raw": "{{baseUrl}}/users/{{id}}" } } }
      ]
    },
    {
      "name": "Employees",
          "auth": { "type": "bearer", "bearer": [ { "key": "token", "value": "{{token}}", "type": "string" } ] },
      "item": [
        {
          "name": "Employees - Create (multipart)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "name", "value": "Rahim", "type": "text" },
                { "key": "age", "value": "30", "type": "text" },
                { "key": "designation", "value": "Engineer", "type": "text" },
                { "key": "hiring_date", "value": "2024-01-15", "type": "text" },
                { "key": "date_of_birth", "value": "1994-05-20", "type": "text" },
                { "key": "salary", "value": "50000", "type": "text" },
                { "key": "photo_path", "type": "file", "src": "" }
              ]
            },
            "url": { "raw": "{{baseUrl}}/employees" }
          }
        },
        { "name": "Employees - List", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": { "raw": "{{baseUrl}}/employees?search=rahim&page=1&limit=20" } } },
        { "name": "Employees - Get", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": { "raw": "{{baseUrl}}/employees/{{id}}" } } },
        { "name": "Employees - Update (multipart)", "request": { "method": "PUT", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "body": { "mode": "formdata", "formdata": [ { "key": "name", "value": "New Name", "type": "text" }, { "key": "photo_path", "type": "file", "src": "" } ] }, "url": { "raw": "{{baseUrl}}/employees/{{id}}" } } },
        { "name": "Employees - Delete", "request": { "method": "DELETE", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": { "raw": "{{baseUrl}}/employees/{{id}}" } } }
      ]
    },
    {
      "name": "Attendance",
      "auth": { "type": "bearer", "bearer": [ { "key": "token", "value": "{{token}}", "type": "string" } ] },
      "item": [
        { "name": "Attendance - Create/Upsert", "request": { "method": "POST", "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" }], "body": { "mode": "raw", "raw": "{ \"employee_id\": 1, \"date\": \"2025-08-12\", \"check_in_time\": \"09:50\" }" }, "url": { "raw": "{{baseUrl}}/attendance" } } },
        { "name": "Attendance - List (filter)", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": { "raw": "{{baseUrl}}/attendance?employee_id=12&from=2025-08-01&to=2025-08-31" } } },
        { "name": "Attendance - Get", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": { "raw": "{{baseUrl}}/attendance/{{id}}" } } },
        { "name": "Attendance - Update", "request": { "method": "PUT", "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" }], "body": { "mode": "raw", "raw": "{ \"check_in_time\": \"09:30\" }" }, "url": { "raw": "{{baseUrl}}/attendance/{{id}}" } } },
        { "name": "Attendance - Delete", "request": { "method": "DELETE", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": { "raw": "{{baseUrl}}/attendance/{{id}}" } } }
      ]
    },
    {
      "name": "Reports",
      "auth": { "type": "bearer", "bearer": [ { "key": "token", "value": "{{token}}", "type": "string" } ] },
      "item": [
        { "name": "Reports - Monthly Attendance", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": { "raw": "{{baseUrl}}/reports/attendance?month=2025-08&employee_id=12" } } }
      ]
    }
  ]
}
